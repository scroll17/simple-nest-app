{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@entities/*": [
        "src/database/entities/*"
      ],
      "@custom-types/*": [
        "src/@custom-types/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": ["./src"]
}
